// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// b. Buatlah table untuk menyimpan laporan
model Laporan {
  id          Int      @id @default(autoincrement())
  judul       String
  isiLaporan  String
  status      String   @default("Dikirim") // Status default: "Dikirim", "Diproses", "Selesai"
  createdAt   DateTime @default(now())
}